package life.genny.rules;

import life.genny.rules.QRules;


rule "Trigger Layouts"
    no-loop true
    when
        rules: QRules( isState("PROJECT_SENT")  && (isState("USER_SENT")) && (!isState("TRIGGER_LAYOUTS")))
     then
     	rules.header();
     	
  		drools.setFocus("SendLayoutsAndData");
		rules.setState("TRIGGER_LAYOUTS");
	    rules.footer();     		      
end
