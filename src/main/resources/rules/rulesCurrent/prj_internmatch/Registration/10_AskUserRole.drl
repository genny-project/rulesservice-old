package life.genny.rules;

import life.genny.rules.QRules;
import life.genny.qwandautils.MergeUtil;

rule "Ask User Role - Intermatch"
    no-loop true
    when
        rules: QRules( isState("ROLE_NOT_FOUND") && !isState("ASK_USER_ROLE") )
     then
     	rules.header();
     	rules.setState("ASK_USER_ROLE");
     	
     	rules.set("sublayoutcode", "LAY_ROLE_SELECTION");
     	rules.set("sublayoutpath", "registration/role_selection.json");
     	
		rules.setState("SEND_SUBLAYOUT");
    	    rules.footer();
end
