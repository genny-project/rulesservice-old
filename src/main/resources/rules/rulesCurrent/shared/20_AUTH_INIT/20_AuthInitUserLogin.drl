package life.genny.rules;

import life.genny.rules.QRules;

rule "User logged in"
    when
        rules: QRules(	isState("AUTH_INIT") && 
						isUserPresent() == true &&  					
						!isState("LOOP_USER_LOGGED_IN"))
      then
		rules.header();
		rules.setState("LOOP_USER_LOGGED_IN");
		
		rules.setState("TRIGGER_APPLICATION_SETUP");

		rules.footer();     		      
end
