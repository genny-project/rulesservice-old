package life.genny.rules;
import life.genny.rules.QRules;

rule "Trigger Message"

    when
         rules: QRules( isState("TRIGGER_SEND_MESSAGE") &&
         				!isState("LOOP_TRIGGER_SEND_MESSAGE") )
     then
     	rules.header();
        rules.setState("LOOP_TRIGGER_SEND_MESSAGE");
        
        rules.setState("TRIGGER_SEND_SMS");
        rules.setState("TRIGGER_SEND_EMAIL");
        rules.setState("TRIGGER_SEND_TOAST");
    
	    rules.footer();      		      
end
