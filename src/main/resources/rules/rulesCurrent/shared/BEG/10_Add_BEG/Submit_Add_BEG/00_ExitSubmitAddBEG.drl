package life.genny.rules;
import life.genny.rules.QRules;

rule "Exit Submit Add BEG"
	when
		rules: QRules( 	isState("PUBLISHED_BEG_AND_KIDS") && 
						!isState("LOOP_EXIT_SUBMIT_ADD_BEG") ) 
	 then
	 	rules.header();
        rules.setState("LOOP_EXIT_SUBMIT_ADD_BEG");
        
		rules.setState("EXITED_SUBMIT_ADD_BEG");

	 	rules.footer();      
end
