package life.genny.rules;
import life.genny.rules.QRules;

/* MOVE BEG to GRP_BIN */
rule "Delete BEG - Step 1"
    when 
        rules: QRules(	isState("BTN_DELETE_BEG") &&
						isState("EVENT_BTN_CLICK") && 
						!isState("LOOP_DELETE_BEG_STEP1"))
    then
        rules.header();
        rules.setState("LOOP_DELETE_BEG_STEP1");

        /* get begCode (itemCode) from state */		
		String begCode = rules.getAsString("itemCode"); 
		if(begCode != null){
			BaseEntity parentBe = rules.getParent(begCode, "LNK_CORE");
			if(parentBe!= null){
				rules.println("beg Code   ::   " + begCode);
				rules.println("beg's current parent is   ::   " + parentBe.getCode());
				rules.moveBaseEntity(begCode, parentBe.getCode(), "GRP_BIN", "LNK_CORE");
				rules.setState("MOVED_BEG_TO_BIN");
			}else{
				rules.println("begCode is null");
			}
		}
        rules.footer();
    end
