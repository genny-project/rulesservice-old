package life.genny.rules;
import life.genny.rules.QRules;

rule "Exit Application"

    when
         rules: QRules( isState("EXIT_SEND_LAYOUTS") && !isState("LOOP_EXIT_APPLICATION_SETUP") )
     then
     	rules.header();
        rules.setState("LOOP_EXIT_APPLICATION_SETUP");
    
        rules.setState("EXIT_APPLICATION_SETUP");
	    rules.footer();      		      
end
