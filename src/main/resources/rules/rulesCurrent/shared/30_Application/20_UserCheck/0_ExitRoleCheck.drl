package life.genny.rules;
import life.genny.rules.QRules;

rule "Exit Role Check"

    when
         rules: QRules( isState("ROLE_CHECKED") && !isState("LOOP_EXIT_CHECK_ROLE") )
     then
     	rules.header();
        rules.setState("LOOP_EXIT_CHECK_ROLE");
    
        rules.setState("EXIT_DID_CHECK_ROLE");
	    rules.footer();      		      
end
