package life.genny.rules;
import life.genny.rules.QRules;

rule "Trigger Role Check"

    when
         rules: QRules(isState("TRIGGER_ROLE_CHECK") && !isState("LOOP_TRIGGER_ROLE_CHECK") )
     then
     	rules.header();
        rules.setState("LOOP_TRIGGER_ROLE_CHECK");
    
        rules.setState("ROLE_CHECK_USER");
	    rules.footer();      		      
end
