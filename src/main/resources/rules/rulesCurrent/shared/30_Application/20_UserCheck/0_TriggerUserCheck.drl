package life.genny.rules;
import life.genny.rules.QRules;

rule "Trigger User Check"

    when
         rules: QRules( isState("TRIGGER_USER_CHECK") && 
                        !isState("LOOP_TRIGGER_USER_CHECK") )
     then
     	rules.header();
        rules.setState("LOOP_TRIGGER_USER_CHECK");
    
        rules.setState("CHECK_USER_ROLE");
	    rules.footer();      		      
end
