package life.genny.rules;
import life.genny.rules.QRules;

rule "Exit User Check"

    when
         rules: QRules( isState("CHECKED") && 
                        !isState("LOOP_EXIT_USER_CHECK") )
     then
     	rules.header();
        rules.setState("LOOP_EXIT_USER_CHECK");
    
        rules.setState("EXIT_USER_CHECK");
	    rules.footer();      		      
end
