package life.genny.rules;

import life.genny.rules.QRules;


rule "Send All Layouts To Frontend"
    no-loop true
    salience 790
    ruleflow-group 'SendAliases'
    when
        rules: QRules( isState("USER_SENT")  && (!isState("LAYOUTS_SENT")) )
     then
     	rules.header();

        rules.sendAllLayouts();
        rules.setState("LAYOUTS_SENT");

	    rules.footer();
end
