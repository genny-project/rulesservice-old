package life.genny.rules;

import life.genny.rules.QRules;
import life.genny.qwanda.message.QEventMessage;

rule "Button Click"
	when
		m : QEventMessage( event_type == "BTN_CLICK" )
	    rules: QRules( !isState("BTN_CODE_SET"))
	 then
	 	rules.header();
 		rules.setState("BTN_CODE_SET");
	 	String btnCode = m.getData().getCode();
		if(btnCode != null) {
	 		rules.setState(btnCode);
		}
	 	rules.footer();
end
