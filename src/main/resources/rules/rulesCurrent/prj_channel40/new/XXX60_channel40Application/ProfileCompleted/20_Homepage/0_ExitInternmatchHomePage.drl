package life.genny.rules;
import life.genny.rules.QRules;

rule "Exit Home Page"
    when
        rules: QRules( isState("HOME_PAGE_SENT_LAYOUT") && 
                    !isState("LOOP_EXIT_HOME_PAGE") ) 
     then           
        rules.header();  

        rules.setState("LOOP_EXIT_HOME_PAGE"); 
        rules.setState("EXIT_HOME_PAGE");  

        rules.footer();
      		      
end
