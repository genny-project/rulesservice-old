rule "Take Note"
    when
        $m : QEventBtnClickMessage( event_type == "BTN_CLICK" && data.code == "BTN_TAKE_NOTE")
        rules: QRules()
    then
        rules.header();
        /* Prepare Token & qwandaServiceUrl */
            String qwandaServiceUrl = rules.getQwandaServiceUrl();
            String tokenString = rules.getToken();

        /* Get begCode, username, userCode, userFullName */
            String begCode = $m.getItemCode();
            System.out.println("begCode  ::   "+ begCode);
            String userCode =  rules.getUser().getCode();
            System.out.println("usercode   ::   "+ userCode);
        /* Send Take Note Questions */
          rules.askQuestionsToUser(userCode, begCode, "QUE_ADMIN_NOTES_GRP", true);


        rules.footer();
end
