package life.genny.rules;

import life.genny.rules.QRules;

rule "Delete BEG - Step 1 - Channel40"
	when
		rules: QRules( isState("EVENT_BTN_CLICK") && isState("BTN_DELETE_BEG") && !isState("DID_TRIGGER_DELETE_JOB") )
	then
	
		rules.header();

		rules.setState("DID_TRIGGER_DELETE_JOB");
		
		/* we show this message */
		rules.showLoading("Deleting job...");

	    rules.footer();
end
