<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    
    <logger category="com.hazelcast.nio.serialization.HazelcastSerializationException">
    		<level name="ERROR"/>
    </logger>
	
    <logger name="io.netty.handler.codec.http.websocketx.WebSocket08FrameDecoder" level="WARN"/>
    <logger name="com.hazelcast.nio.tcp.TcpIpConnector" level="ERROR"/>
    <logger name="com.hazelcast.instance.Node" level="ERROR"/>
        <logger name="com.hazelcast.core.LifecycleService" level="ERROR"/>
        <logger name="com.hazelcast.internal.cluster.impl.MulticastJoiner" level="ERROR"/>
        <logger name="io.vertx.core.impl.launcher.commands.VertxIsolatedDeployer" level="ERROR"/>
        <logger name="com.hazelcast.spi.impl.operationexecutor.impl.OperationExecutorImpl" level="ERROR"/>
        <logger name="com.hazelcast.instance.AddressPicker" level="OFF"/>
        <logger name="com.hazelcast.spi.impl.operationservice.impl.BackpressureRegulator" level="ERROR"/>
        <logger name="com.hazelcast.internal.diagnostics.Diagnostics" level="ERROR"/>
        <logger name="com.hazelcast.nio.tcp.TcpIpConnectionManager" level="ERROR"/>
        <logger name="io.vertx.core.impl.BlockedThreadChecker" level="OFF" />
        
    
</configuration>

